<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Test</title>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    </head>
    <body>
        <div class="container">
            <fieldset>
                <form id="form" action="/" method="post">
                    <input name="dimmer" type="range" value="<%=values.dimmer%>" min="0" max="100" step="1" 
                     class="ghost-input" oninput="display.value=value" onchange="submitForm(value)"
                     id="slider">
                    <input type="text" id="display" value="<%=values.dimmer%>" readonly>
                    <input type="submit" class="ghost-button" value="Submit">
                </form>
            </fieldset>
        </div>
    </body>
</html>
<script>
    function submitForm(value) {
        var form = document.getElementById("form");
        var display = document.getElementById("display");
        display.value = value;
        form.submit();
    }
</script>
